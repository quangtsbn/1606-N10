<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.quan_ly_cong_viec</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Quản Lý Công Việc" string="Quản Lý Công Việc" data-key="quan_ly_cong_viec">
                    <h2>Cấu hình AI</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="quan_ly_cong_viec_ai_api_key"/>
                                <div class="text-muted">
                                    API Key của Google Gemini để sử dụng tính năng phân tích công việc.
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="quan_ly_cong_viec_ai_model" string="Chọn Model"/>
                                        <field name="quan_ly_cong_viec_ai_model" class="o_light_label"/>
                                    </div>
                                    <div class="mt16">
                                        <label for="quan_ly_cong_viec_ai_api_key"/>
                                        <field name="quan_ly_cong_viec_ai_api_key" password="True"/>
                                    </div>
                                    <div class="mt8">
                                        <a href="https://aistudio.google.com/" target="_blank" class="oe_link">
                                            <i class="fa fa-arrow-right mr-1"/>Lấy API Key miễn phí
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_quan_ly_cong_viec_config_settings" model="ir.actions.act_window">
        <field name="name">Cài Đặt</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'quan_ly_cong_viec'}</field>
    </record>

    <menuitem id="menu_quan_ly_cong_viec_settings"
        name="Cài Đặt"
        parent="menu_root_duan"
        action="action_quan_ly_cong_viec_config_settings"
        sequence="100"/>
</odoo>
